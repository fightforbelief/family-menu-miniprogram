/* pages/admin/admin.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
}

/* 顶部标题 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 按钮列表 */
.button-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.action-btn {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border: none;
  position: relative;
  transition: transform 0.2s;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.btn-content {
  flex: 1;
  text-align: left;
}

.btn-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.btn-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.btn-arrow {
  font-size: 40rpx;
  color: #999;
  margin-left: 16rpx;
}

/* 不同按钮的边框装饰 */
.btn-orders {
  border-left: 8rpx solid #667eea;
}

.btn-menu {
  border-left: 8rpx solid #11998e;
}

.btn-add {
  border-left: 8rpx solid #f093fb;
}
