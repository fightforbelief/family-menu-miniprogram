/* pages/menuManage/menuManage.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 菜系筛选 */
.cuisine-filter {
  background: #fff;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.cuisine-scroll {
  width: 100%;
  white-space: nowrap;
}

.cuisine-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 0 20rpx;
}

.cuisine-item {
  flex-shrink: 0;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  transition: all 0.3s;
}

.cuisine-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

/* 菜品列表 */
.dish-list {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dish-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: normal;
}

.status.available {
  background: #e6f7e6;
  color: #52c41a;
}

.status.unavailable {
  background: #fff1f0;
  color: #ff4d4f;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-category {
  font-size: 24rpx;
  color: #666;
}

.action-btns {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  justify-content: center;
  margin-left: 20rpx;
}

.action-btn {
  width: 100rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
  border: none;
  border-radius: 28rpx;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  background: #e6f7ff;
  color: #1890ff;
}

.action-btn.offline {
  background: #fff7e6;
  color: #fa8c16;
}

.action-btn.online {
  background: #e6f7ff;
  color: #52c41a;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.add-icon {
  font-size: 72rpx;
  color: #fff;
  font-weight: 300;
}
